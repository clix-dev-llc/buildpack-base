#!/bin/bash

for test_file in /test/*.bats; do
  echo $test_file
  if [ -f $test_file ]; then
    rm -rf /input/*
    rm -rf /workspace/*
    rm -rf /output/*
    echo -e "\e[34mRunning ${test_file}\e[0m"
    bats "$test_file"
    if [[ "$?" -eq 0 ]]; then
      echo -e "\e[32mPassed\e[0m"
    else
      echo -e "\e[31mFailed\e[0m"
      exit 1
    fi
  else
    echo -e "\e[31mNo tests found\e[0m"
    exit 1
  fi
done
